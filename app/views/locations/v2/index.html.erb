<%= render partial: 'common/breadcrumbs',
           locals: {
               section: 'Configuration',
               crumbs: [
                   {title: 'Configuration', path: ''},
                   {title: 'Locations'}
               ]
           } %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">
    <div class="col-lg-12">

      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= link_to 'Add Location', new_admin_location_path, class: "btn btn-primary"  %>
          <table class="table table-striped table-bordered table-hover " id="editable">
            <thead>
            <tr>
              <th>Name</th>
              <th>Address</th>
              <th>Email</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>

            <%= render partial: 'locations/v2/location', collection: @locations %>

            <% if @locations.empty? %>
              <tr>
                <td colspan="4">No locations</td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
