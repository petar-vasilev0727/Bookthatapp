<%= render partial: 'common/breadcrumbs',
           locals: {
               section: 'Configuration',
               crumbs: [
                   {title: 'Configuration', path: ''},
                   {title: 'Resources'}
               ]
           } %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= link_to 'Add Resource', new_admin_resource_path, class: "btn btn-primary"  %>
          <table class="table table-striped table-bordered table-hover " id="editable">
            <thead>
            <tr>
              <th>Name</th>
              <th>Description</th>
              <th>Type</th>
              <th>Action</th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: 'resources/v2/resource', collection: @resources %>
            <% if @resources.empty? %>
              <tr>
                <td colspan="4">No resources</td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

