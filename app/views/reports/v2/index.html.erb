<%= render partial: 'common/breadcrumbs',
           locals: {
               section: 'Reports',
               crumbs: [
                   {title: 'Configuration', path: ''},
                   {title: 'Reports'}
               ]
           } %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <%= link_to 'Add Report', new_admin_report_path, class: "btn btn-primary"  %>
          <table class="table table-striped table-bordered table-hover " id="editable">
            <thead>
            <tr>
              <th>Name</th>
              <th>Fields</th>
              <th></th>
            </tr>
            </thead>
            <tbody>
            <%= render partial: 'reports/v2/report', collection: @reports %>
            <% if @reports.empty? %>
              <tr>
                <td colspan="4">No reports</td>
              </tr>
            <% end %>
            </tbody>
            <tfoot>
            </tfoot>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

