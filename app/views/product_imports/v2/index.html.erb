
<%= render partial: 'common/breadcrumbs',
           locals: {
               section: 'Product Import',
               crumbs: [
                   {title: 'Configuration', path: ''},
                   {title: 'Product Imports'}
               ]
           } %>

<div class="wrapper wrapper-content animated fadeInRight">
  <div class="row">

    <div class="col-lg-12">
      <div class="ibox float-e-margins">
        <div class="ibox-content">
          <p><%= link_to 'New Import', new_admin_product_import_path, class:'btn btn-primary submit' %></p>
          <table class="table table-striped table-bordered table-hover">
            <tr>
              <th>Created</th>
              <th>Status</th>
              <th>Products to Import</th>
              <th>Products Imported</th>
              <th class="table-actions"></th>
            </tr>

            <% @imports.each do |import| %>
                <tr>
                  <td><%= I18n.localize(import.created_at, :format => :short) %></td>
                  <td><%= import.state.capitalize %></td>
                  <td><%= import.product_count %></td>
                  <td><%= import.import_count %></td>
                  <td class="table-actions">
                    <%= link_to content_tag(:span, '', :class => "ui-icon #{import.state == 'running' ? 'ui-icon-cancel' : 'ui-icon-trash'}"), import, :data => {:confirm => 'Are you sure?'}, :method => :delete %>
                  </td>
                </tr>
            <% end %>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>

